{{!< layout}}
<hr>
<div class="container">
	<div class="row">
		<div class="col-sm-4 col-lg-4">
			<div class="list-group">
			  <a href="#" class="list-group-item active" id="credit-card">Credit Card</a>
			  <a href="#" class="list-group-item" id="debit-card">Debit Card</a>
			  <a href="#" class="list-group-item" id="cod">Cash On Delivery</a>
			  <a href="#" class="list-group-item" id="net-banking">Net Banking</a>
			</div>
		</div>
		<div class="col-sm-8 col-lg-8">
			<form  action="javascript:alert( 'success!' );">
				Selected mode of transfer amount is :<span></span>
				<div class="form-group">
					<label for="exampleInputEmail1">Name</label>
					<input type="text" class="form-control" id="exampleInputName" placeholder="Name">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Email address</label>
					<input type="email" class="form-control" id="exampleInputEmail" placeholder="Email">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">Phone Number</label>
					<input type="phone" class="form-control" id="exampleInputPhoneNumber" placeholder="Phone Number">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">City Name</label>
					<input type="phone" class="form-control" id="exampleInputCityName" placeholder="City Name">
				</div>
				<div class="checkbox">
					<label>
					  <input type="checkbox"> Check me out
					</label>
				</div>
				<button type="submit" class="btn btn-default">Py Now</button>
			</form>
			<div id="other">
			  Trigger the handler
			</div>
		</div>
	</div>
	
</div>



{{#contentFor "scriptHolder"}}
<script type="text/javascript">
	var cardtype="";
	$('#credit-card').click(function(){
		$('form span').text("Credit Card");
		cardtype="Credit Card";
	})
	$('#debit-card').click(function(){
		$('form span').text("Debit Card");
		cardtype="Debit Card";
	})
	$('#cod').click(function(){
		$('form span').text("Cash On Delivery")
		cardtype="Cash On Delivery";
	})
	$('#net-banking').click(function(){
		$('form span').text("Net Banking")
		cardtype="Net Banking";
	})
	$( "form" ).submit(function( event ) {
		alert( "Handler for .submit() called." );

		var nameValue=$('#exampleInputName').text();
		var emailValue=$('#exampleInputEmail').text();
	    var phoneValue=$('#exampleInputPhoneNumber').text();
		var cityValue=$('#exampleInputCityName').text();

		var formdata={
			name:nameValue,
			email:emailValue,
			phone:phoneValue,
			city:cityValue,
			paymentmode:cardtype
		}
		console.data(formdata)
	  event.preventDefault();
	});
</script>
{{/contentFor}}