<script>
$(function(){
var carttno=0;
var appendthis =  ("<div class='modal-overlay js-modal-close'></div>");

	$('a[data-modal-id]').click(function(e) {
		e.preventDefault();
    $("body").append(appendthis);
    $(".modal-overlay").fadeTo(500, 0.7);
    //$(".js-modalbox").fadeIn(500);
		var modalBox = $(this).attr('data-modal-id');
		$('#'+modalBox).fadeIn($(this).data());
	});  
  
  
$(".js-modal-close, .modal-overlay").click(function() {
    $(".modal-box, .modal-overlay").fadeOut(500, function() {
        $(".modal-overlay").remove();
    }); 
});
 
$(window).resize(function() {
    $(".modal-box").css({
        top: ($(window).height() - $(".modal-box").outerHeight()) / 2,
        left: ($(window).width() - $(".modal-box").outerWidth()) / 2
    });
});
function pricecal(value){
	var totalAmount=value+value;
	$(".container-details h3").text(totalAmount);
}
function cartstatus(){
    carttno= carttno + 1;
    $('.right-header span').text(carttno);
}
function reducecart(){
	var currentval=0;
	currentval=$('.right-header span').text();
	currentval= currentval-1;
	console.log(currentval);
	$('.right-header span').text(currentval);
}
 $('.js-open-modal').click(function(){
		$(this).children("h4:first").css("display","block");
		
		cartstatus();
		$('.right-header span').text(carttno);
		$('#removeFromCartid').click(function(){
	 		$('.container-product ul > li > a h4').css("display","none");
	 		reducecart();
		 })
 		var heading=$(this).children("h2:first").text();
 		$('#popup1 header h3').text(heading);
 		var details=$(this).children("p:first").text();
 		$('.modal-body p').text(details);
 		var priceDetails=$(this).children("div:first").text();
 		$('.modal-body p').text(details);
 		var pricetotal=$(this).children("strong:first").text();
 		pricecal(pricetotal);
 		$('.modal-body h4').text(priceDetails);
 		var edith4=$('.modal-body h4').text();
 		var result=edith4.replace(/Add to Cart/g,"");
